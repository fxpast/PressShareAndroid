<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorPrimary"
    android:id="@+id/IBListCrenItemBackgr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/IBListDateDebut"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="left|center"
            android:text="Date debut"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/IBListDateFin"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="left|center"
            android:text="date fin"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/IBListTapAloc"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="left|center"
            android:text="tap location"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/IBListRepeat"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="left|center"
            android:text="repeter"
            android:textSize="15sp" />


    </LinearLayout>



</android.support.v7.widget.CardView>
