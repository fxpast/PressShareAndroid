<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prv.gootoor.activities.fragments.MapFragment">


    <include
        layout="@layout/map_toolbar"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/IBMap"
        android:layout_width="382dp"
        android:layout_height="554dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.272" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/IBMapAddProduct"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/addbutton"
        android:layout_marginEnd="43dp"
        app:borderWidth="0dp"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/IBMap"
        android:layout_marginBottom="63dp"
        android:layout_marginRight="43dp"
        app:layout_constraintRight_toRightOf="@+id/IBMap" />

</android.support.constraint.ConstraintLayout>
