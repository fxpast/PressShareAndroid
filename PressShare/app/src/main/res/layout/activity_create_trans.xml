<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.prv.pressshare.activities.CreateTransActivity">


    <include
        layout="@layout/create_trans_toolbar"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/include" />

    <TextView
        android:id="@+id/IBInfoProduct"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="13dp"
        android:inputType="textMultiLine"
        android:text=""
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
         />

    <TextView
        android:id="@+id/IBInfoContact1"
        android:layout_width="343dp"
        android:layout_height="42dp"
        android:text=""

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/IBInfoProduct"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/IBInfoProduct"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/IBInfoProduct" />

    <TextView
        android:id="@+id/IBInfoContact2"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:text=""
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/IBInfoContact1"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/IBInfoContact1"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/IBInfoContact1" />

    <Switch
        android:id="@+id/IBisTrade"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:text="@string/buy"
        android:onClick="actionTrade"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="253dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/IBInfoProduct"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/IBInfoProduct"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.895"
        app:layout_constraintRight_toRightOf="@+id/IBInfoProduct"
        app:layout_constraintHorizontal_bias="0.033"
        tools:layout_editor_absoluteY="260dp" />


    <Switch
        android:id="@+id/IBisExchange"
        android:layout_width="113dp"
        android:layout_height="37dp"
        android:text="@string/exchange"
        android:onClick="actionExchange"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/IBisTrade"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/IBisTrade"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/IBisTrade"
        app:layout_constraintHorizontal_bias="0.0" />


</android.support.constraint.ConstraintLayout>