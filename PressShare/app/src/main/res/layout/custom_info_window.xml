<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_info_bubble"
    android:orientation="horizontal">


        <ImageView
            android:id="@+id/IBInfoImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/IBPinTitle"
            style="@style/Button"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center"
            app:theme="@style/Button"
            android:text="info produit" />


        <TextView
            android:id="@+id/IBPinSnippet"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center"
            android:text="sous titre produit"
            android:textColor="#ff7f7f7f"
            android:layout_weight="0.07" />


        <Button
            android:id="@+id/IBPinOther"
            style="@style/Button"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center"
            app:theme="@style/Button"
            android:text="@string/seeOtherProduct" />

        </LinearLayout>

</LinearLayout>
