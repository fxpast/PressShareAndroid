<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prv.pressshare.LoginActivity">


        <ImageView
            android:id="@+id/imagPress"
            android:layout_width="148dp"
            android:layout_height="131dp"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.34" />

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="32dp"
        android:layout_height="29dp"
        app:srcCompat="@android:drawable/ic_menu_help"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="29dp" />





        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagPress"
            android:visibility="gone"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/pseudo_input"
            android:layout_width="215dp"
            android:layout_height="91dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/imagPress"
            android:layout_marginStart="36dp">

            <EditText
                android:id="@+id/pseudo"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="@string/prompt_pseudo"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/guest_button"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="Invité"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/pseudo_input"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toTopOf="@+id/forgetten_button"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_input"
            android:layout_width="217dp"
            android:layout_height="95dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pseudo_input"
            android:layout_marginStart="34dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="@string/prompt_password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/forgetten_button"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="Oublié?"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/password_input"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="226dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp" />


        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="connexion"
            android:textSize="10sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.287"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_input"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />


        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:text="Ouvrir un compte"
            android:textSize="10sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>