<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.prv.pressshare.NewUserActivity">


    <ImageView
        android:id="@+id/help"
        android:layout_width="32dp"
        android:layout_height="29dp"
        app:srcCompat="@android:drawable/ic_menu_help"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/pseudo_input"
        android:layout_width="215dp"
        android:layout_height="91dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <EditText
            android:id="@+id/pseudo"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:hint="@string/prompt_pseudo"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>


    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginLeft="134dp"
        android:layout_marginRight="134dp"
        app:layout_constraintTop_toBottomOf="@+id/pseudo_input"
        android:visibility="gone" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_input"
        android:layout_width="217dp"
        android:layout_height="95dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pseudo_input">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_input"
        android:layout_width="217dp"
        android:layout_height="95dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_input">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="@string/prompt_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/checkpwd_input"
        android:layout_width="217dp"
        android:layout_height="95dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_input">

        <EditText
            android:id="@+id/checkpwd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="@string/prompt_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:text="Valider"
        android:textSize="10sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkpwd_input" />

</android.support.constraint.ConstraintLayout>
